#!/bin/bash

# Pre-push hook for Arizona project
# Performs comprehensive quality checks before pushing

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

START_TIME=$(date +%s)

echo -e "${GREEN}Running pre-push checks...${NC}"

# 1. Run Erlang checks (fmt, lint, hank, xref, dialyzer)
echo -e "${YELLOW}→ Running rebar3 check...${NC}"
rebar3 check

# 2. Verify build succeeds and check for changes (only if JS/CSS changed)
if git diff --name-only HEAD @{push} 2>/dev/null | grep -qE '\.(js|css|ts)$'; then
    echo -e "${YELLOW}→ Running npm run build...${NC}"
    npm run build

    echo -e "${YELLOW}→ Checking for uncommitted changes after build...${NC}"
    git diff --exit-code
else
    echo -e "${YELLOW}⚠ No JS/CSS changes detected, skipping build check${NC}"
fi

# 3. Run npm-installable markdown linting
echo -e "${YELLOW}→ Running markdown linting...${NC}"
npm run lint:md

# 4. Run yaml linting if command available
echo -e "${YELLOW}→ Running YAML linting...${NC}"
if command -v yamllint >/dev/null 2>&1; then
    yamllint .github/**/*.yml .*.yml
else
    echo -e "${YELLOW}⚠ yamllint not found, skipping YAML checks${NC}"
fi

# 5. Run action linting if command available
echo -e "${YELLOW}→ Running GitHub Actions linting...${NC}"
if command -v actionlint >/dev/null 2>&1; then
    actionlint
else
    echo -e "${YELLOW}⚠ actionlint not found, skipping Actions checks${NC}"
fi

END_TIME=$(date +%s)
DURATION=$((END_TIME - START_TIME))
echo -e "${GREEN}✓ All pre-push checks passed in ${DURATION}s! Ready to push.${NC}"
