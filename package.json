{
  "name": "Arizona JS",
  "type": "module",
  "scripts": {
    "build": "node ./esbuild.config.js",
    "format": "prettier --write \"./*.js\" \"./assets/**/*.js\" \"**/*.json\" \"**/*.yml\" --config prettier.config.js --ignore-path .prettierignore",
    "format:check": "prettier --check \"./*.js\" \"./assets/**/*.js\" \"**/*.json\" \"**/*.yml\" --config prettier.config.js --ignore-path .prettierignore",
    "lint": "eslint eslint.config.js --fix",
    "lint:check": "eslint eslint.config.js",
    "format:lint": "npm run format && npm run lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --reporter=line",
    "test:e2e:report": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci": "npm run format:check && npm run lint:check && npm test"
  },
  "devDependencies": {
    "@eslint/js": "9.24.0",
    "@playwright/test": "^1.53.2",
    "esbuild": "0.25.2",
    "eslint": "9.24.0",
    "globals": "16.0.0",
    "prettier": "3.5.3",
    "uglify-js": "3.19.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "morphdom": "2.7.4"
  }
}
