{minimum_otp_vsn, "27"}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_missing_spec
]}.

{deps, [
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}},
    {cowboy, "2.13.0"}
]}.

{dialyzer, [
    {plt_apps, all_deps},
    {plt_extra_apps, [
        doctest,
        common_test,
        eunit,
        inets,
        syntax_tools
    ]},
    {warnings, [
        unknown,
        unmatched_returns
    ]},
    incremental
]}.

{alias, [
    {ci, [
        lint,
        hank,
        xref,
        {do, "default as test dialyzer"},
        eunit,
        % Remove options when cover_compiled bug fixed.
        {ct, "--cover"},
        cover,
        ex_doc
    ]}
]}.

{profiles, [
    {default, [
        {xref_checks, [
            exports_not_used
        ]}
    ]},
    {test, [
        % Cover is enabled only for ct because the cover_compiled
        % bug in the `code:get_doc`. After fixed, we can enable it again.
        % See https://github.com/erlang/otp/pull/9433
        %{cover_enabled, true},
        {cover_opts, [verbose]},
        {erl_opts, [
            debug_info,
            nowarn_missing_spec,
            warnings_as_errors
        ]},
        {extra_src_dirs, [{"test", [{recursive, true}]}]},
        {deps, [{doctest, "~> 0.12"}]},
        {xref_checks, []}
    ]}
]}.

{project_plugins, [
    {rebar3_hex, "7.0.8"},
    {erlfmt, "1.6.0"},
    {rebar3_lint, "3.2.6"},
    {rebar3_hank, "1.4.1"},
    {rebar3_ex_doc, "0.2.25"}
]}.

{shell, [{apps, [arizona]}]}.

{erlfmt, [
    write,
    {files, [
        "elvis.config",
        "rebar.config",
        "src/*.app.src",
        "src/**/*.erl",
        "test/**/*.erl"
    ]}
]}.

{ex_doc, [
    {extras, [
        "README.md",
        "SECURITY.md",
        "CODE_OF_CONDUCT.md",
        "CONTRIBUTING.md",
        "LICENSE.md",
        "CHANGELOG.md"
    ]},
    {main, "README.md"},
    {api_reference, false},
    {source_url, "https://github.com/arizona-framework/arizona"},
    {prefix_ref_vsn_with_v, false}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{eunit_opts, [
    no_tty,
    {report, {doctest_eunit_report, [{print_depth, 200}]}}
]}.
