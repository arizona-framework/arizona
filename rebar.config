{minimum_otp_vsn, "27"}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_missing_spec
]}.

{deps, [
    {cowboy, "2.12.0"},
    {fs, "8.6.1"},
    {gproc, "1.0.0"}
]}.

{dialyzer, [
    {plt_apps, all_deps},
    {plt_extra_apps, [
        eunit,
        inets,
        syntax_tools
    ]},
    {warnings, [
        unknown,
        unmatched_returns
    ]},
    incremental
]}.

{xref_checks, [
    exports_not_used
]}.

{alias, [
    {ci, [
        lint,
        {do, "default as test dialyzer"},
        xref,
        eunit,
        ct,
        cover,
        ex_doc
    ]}
]}.

{profiles, [
    {test, [
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {erl_opts, [
            debug_info,
            nowarn_missing_spec,
            warnings_as_errors
        ]},
        {extra_src_dirs, [{"test", [{recursive, true}]}]}
    ]}
]}.

{project_plugins,
 [{rebar3_hex, "7.0.8"},
  {erlfmt, "1.3.0"},
  {rebar3_lint, "3.2.5"},
  {rebar3_hank, "1.4.0"},
  {rebar3_ex_doc, "0.2.23"}]}.

{shell, [{apps, [arizona]}]}.

{erlfmt, [
    write,
    {files, [
        "elvis.config",
        "rebar.config",
        "include/*.hrl",
        "src/*.app.src",
        "src/**/*.erl",
        "test/**/*.erl"
    ]}
]}.

{ex_doc, [
    {extras, [
        "README.md",
        "SECURITY.md",
        "CODE_OF_CONDUCT.md",
        "CONTRIBUTING.md",
        "LICENSE.md",
        "CHANGELOG.md"
    ]},
    {main, "README.md"},
    {api_reference, false},
    {source_url, "https://github.com/arizona-framework/arizona"},
    {prefix_ref_vsn_with_v, false}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.
